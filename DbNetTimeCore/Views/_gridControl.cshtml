@model DbNetTimeCore.Models.GridViewModel
@using System.Data
<form id="@Model.GridId">
    @await Html.PartialAsync("~/Pages/Shared/_gridMarkup.cshtml", Model)
</form>

<script>
    domReady(() => {
        alert("ready")
        let gridControl = new GridControl("@(Model.GridId)");
        document.addEventListener('htmx:afterRequest', function (evt) {
            gridControl.init(evt);
        });
    });
</script>
