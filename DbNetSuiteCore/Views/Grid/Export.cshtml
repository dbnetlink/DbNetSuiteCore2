@model DbNetSuiteCore.ViewModels.GridViewModel
@using System.Data
@using DbNetSuiteCore.Models
@using Microsoft.AspNetCore.Html
@using System.Text.Json
<html>
<head>
    <meta charset="utf-8" />
    <style>
        table, th, td {
            border: 1px solid;
            font-family:sans-serif;
            font-size:medium;
            border-collapse:collapse;
            padding:2px;
        }

        .text-right {
            text-align:right;
        }

        th 
        {
            background-color:#cccccc;
        }

        tr:nth-child(even) {
            background-color: #eeeeee;
        }
    </style>
    
</head>
<body>
    <table class="htmx-table">
        <thead>
            <tr class="bg-slate-200">
                @foreach (ColumnModel column in Model.VisibleColumns)
                {
                    <th class="text-base">
                        <div class="flex flex-row justify-between items-center">@(column?.Label)</div>
                    </th>
                }
            </tr>
        </thead>
        @await Html.PartialAsync("Grid/Rows", Model)
    </table>
</body>
</html>