@model IEnumerable<DbNetSuiteCore.Models.GridModel>
@using System.Data
<tr class="nested-grid-row">
    <td class="w-12"></td>
    <td colspan="@Model.First().ColSpan">
        <div class="flex items-start gap-2">
            @foreach (var gridModel in Model)
            {
                <div>
                    @await Html.PartialAsync("Grid/__ControlForm", gridModel)
                </div>
            }
        </div>
    </td>
</tr>