@model DbNetSuiteCore.Models.SelectModel
@using System.Text.Json
@using DbNetSuiteCore.Helpers
@using DbNetSuiteCore.Constants
<form class="dbnetsuite dbnetsuite-select" hx-post="@Model.PostUrl" hx-trigger="@Model.HxFormTrigger" hx-indicator="next .htmx-indicator" hx-target="this" id="@Model.Id" name="@TriggerNames.InitialLoad" style="display:none">
    @await Html.PartialAsync("Select/Hidden",Model)
</form>
@await Html.PartialAsync("HxIndicator")
<script>
    document.addEventListener("DOMContentLoaded", function () { DbNetSuiteCore.createClientControl('@(Model.Id)', @Html.Raw(JsonSerializer.Serialize(Model.ClientEvents))); }); 
</script>