@model DbNetSuiteCore.ViewModels.SelectViewModel
@inject IConfiguration Configuration
@using Microsoft.Extensions.Configuration
@using DbNetSuiteCore.Helpers
@using DbNetSuiteCore.Constants
@RazorHelper.ModelState(Model.SelectModel, Configuration)
@if (Model.IsParent)
{
    @RazorHelper.ModelSummaryState(Model.SelectModel, Configuration)
}
@if (string.IsNullOrEmpty(Model.JSON) == false)
{
    <input type="hidden" name="json" value="@TextHelper.Compress(Model.JSON)" />
}
@Model.RenderHtmxTriggerInput(TriggerNames.FixedFilterParameters)
@Model.RenderHtmxTriggerInput(TriggerNames.ApiRequestParameters)