@model DbNetSuiteCore.Models.FormModel
@using System.Text.Json
@using DbNetSuiteCore.Helpers
@using DbNetSuiteCore.Constants
<form class="dbnetsuite dbnetsuite-form" hx-post="@Model.PostUrl" hx-trigger="@Model.HxFormTrigger" hx-indicator="next .htmx-indicator" hx-target="this" id="@Model.Id" name="@TriggerNames.InitialLoad" style="display:none" data-datasourcetype="@Model.DataSourceType" spellcheck="false">
    @await Html.PartialAsync("Form/__Hidden",Model)
</form>
@await Html.PartialAsync("__HxIndicator")

<script>
    document.addEventListener("DOMContentLoaded", function () { DbNetSuiteCore.createClientControl('@(Model.Id)', @Html.Raw(JsonSerializer.Serialize(Model.ClientEvents))); }); 
</script>