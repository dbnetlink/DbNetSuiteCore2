@using DbNetSuiteCore.Enums
@using DbNetSuiteCore.Helpers
@using DbNetSuiteCore.Models
@{

    var orderDetailColumns = new List<GridColumn>
    {
        new GridColumn("orderid", "Order ID"),
        new GridColumn("ProductID", "Product") {Lookup = new Lookup("Products","ProductID","ProductName")},
        new GridColumn("UnitPrice", "Unit Price") { Format = "C"},
        new GridColumn("Quantity", "Qty"),
        new GridColumn("Discount", "Discount"),
    };

    var orderDetailGrid = new GridModel(DataSourceType.SQLite, "Northwind(sqlite)", "[order details]");
    orderDetailGrid.Columns = orderDetailColumns;
    @(await new DbNetSuiteCore.GridControl(Context).Render(orderDetailGrid))
}

