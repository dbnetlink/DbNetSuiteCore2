@page
@using DbNetSuiteCore.Enums
@using DbNetSuiteCore.Models
@using DbNetSuiteCore.Constants
@{
    var companiesForm = new FormModel(DataSourceType.MongoDB, "MongoDb(remote)", "companies") { DatabaseName = "sample_training", QueryLimit = 200 };

    companiesForm.Columns = new List<FormColumn>() {
        new FormColumn("_id"),
        new FormColumn("name"),
        new FormColumn("permalink"),
        new FormColumn("twitter_username"),
        new FormColumn("crunchbase_url") {Span = 2},
        new FormColumn("homepage_url"){Span = 2},
        new FormColumn("blog_url"){Span = 2},
        new FormColumn("blog_feed_url"){Span = 2},
        new FormColumn("category_code"),
        new FormColumn("number_of_employees"),
        new FormColumn("tag_list"){Span = 4},
        new FormColumn("email_address"),
        new FormColumn("phone_number"),
        new FormColumn("description"){Span = 2},
        new FormColumn("overview") {Span = 4, HtmlEditor = HtmlEditor.TinyMCE }
    };


    @(await new DbNetSuiteCore.FormControl(HttpContext).Render(companiesForm))
}

<script src="~/js/tinymce/tinymce.min.js"></script>
