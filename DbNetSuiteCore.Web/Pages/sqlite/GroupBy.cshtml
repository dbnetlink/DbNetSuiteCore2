@page
@using DbNetSuiteCore.Enums
@using DbNetSuiteCore.Web.Enums
@using DbNetSuiteCore.Helpers
@using DbNetSuiteCore.Models
@{
    var invoiceColumns = new List<GridColumnModel>
    {
        new GridColumnModel("ProductName", "Product"),
        new GridColumnModel("UnitPrice", "Unit Price") {Format = "c", Aggregate = AggregateType.Sum} ,
        new GridColumnModel("Quantity", "Qty") {Aggregate = AggregateType.Sum},
        new GridColumnModel("(UnitPrice*Quantity)", "Price") {Format = "c", Aggregate = AggregateType.Sum, DataType = typeof(Decimal)},
    };

    var invoiceGrid = new GridModel(DataSourceType.SQlite, "Northwind(sqlite)", "invoices");
    invoiceGrid.Columns = invoiceColumns;
    @(await new DbNetSuiteCore.GridControl(HttpContext).Render(invoiceGrid))
}