@page
@using DbNetSuiteCore.Enums
@using DbNetSuiteCore.Helpers
@using DbNetSuiteCore.Models
@using DbNetSuiteCore.Web.Enums
@using Microsoft.Extensions.Primitives;


@{
    var columns = new List<GridColumn>
    {
        new GridColumn("Row ID"){ Filter = FilterType.Default, DataType = typeof(int), PrimaryKey = true },
        new GridColumn("Order ID"){ Filter = FilterType.Default },
        new GridColumn("Order Date"){ Filter = FilterType.Default, DataType = typeof(DateTime) },
        new GridColumn("Ship Date"){ DataType = typeof(DateTime) },
        new GridColumn("Ship Mode") { Filter = FilterType.Distinct},
        new GridColumn("Customer ID"),
        new GridColumn("Customer Name"),
        new GridColumn("Segment"){ Filter = FilterType.Distinct},
        new GridColumn("Country"){ Filter = FilterType.Distinct},
        new GridColumn("City"){ Filter = FilterType.Distinct},
        new GridColumn("State"){ Filter = FilterType.Distinct},
        new GridColumn("Postal Code"),
        new GridColumn("Region"){ Filter = FilterType.Distinct},
        new GridColumn("Product ID"),
        new GridColumn("Category"){ Filter = FilterType.Distinct},
        new GridColumn("Sub-Category"){ Filter = FilterType.Distinct},
        new GridColumn("Product Name"),
        new GridColumn("Sales") { Format = "c",Filter = FilterType.Default,DataType = typeof(Decimal) },
        new GridColumn("Quantity") { Filter = FilterType.Distinct, DataType = typeof(int)},
        new GridColumn("Discount") { Format = "p", Filter = FilterType.Default,DataType = typeof(Decimal)},
        new GridColumn("Profit") { Format = "c", Filter = FilterType.Default,DataType = typeof(Decimal)}
    };

    var superstoreGrid = new GridModel(DataSourceType.Excel, $"/data/excel/superstore.xlsx") { Columns = columns, Cache = true, ViewDialog = new ViewDialog() };
}

@(await new DbNetSuiteCore.Control(HttpContext).Render(superstoreGrid))
