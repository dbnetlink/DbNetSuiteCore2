@page
@using DbNetSuiteCore.Enums
@using DbNetSuiteCore.Helpers
@using DbNetSuiteCore.Models

@{
    var customersGridParameters = new List<DbParameter>() { new DbParameter("OrderId", 10248, typeof(Int32)) };
    var customersGrid = new GridModel(DataSourceType.MSSQL, "Northwind(mssql)", "CustOrdersDetail", customersGridParameters);

    customersGrid.Columns = new List<GridColumn>() { 
        new GridColumn("UnitPrice", "Unit Price") { Format = "c" }, 
        new GridColumn("ExtendedPrice", "Ext. Price") { Format = "c" }
    };
    @(await new DbNetSuiteCore.GridControl(HttpContext).Render(customersGrid))
}