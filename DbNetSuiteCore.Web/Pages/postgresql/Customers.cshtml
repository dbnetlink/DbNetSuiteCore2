@page
@using DbNetSuiteCore.Enums
@using DbNetSuiteCore.Web.Enums
@using DbNetSuiteCore.Helpers
@using DbNetSuiteCore.Models
@using Microsoft.Extensions.Primitives;
@using DbNetSuiteCore.Web.Constants
@{
    string db = Request.Query["db"] == StringValues.Empty ? "Northwind(postgresql)" : string.Format(ConnectionStringTemplates.PostgreSql, Request.Query["db"].ToString());
    var customersGrid = new GridModel(DataSourceType.PostgreSql, db, "customer");
    @(await new DbNetSuiteCore.GridControl(HttpContext).Render(customersGrid))
}