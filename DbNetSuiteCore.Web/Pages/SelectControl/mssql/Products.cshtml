@page
@using DbNetSuiteCore.Enums
@using DbNetSuiteCore.Models
@using DbNetSuiteCore.Web.Helpers
@{
    var productSelect = new SelectModel(DataSourceType.MSSQL, ConnectionStringHelper.TestConnectionString(Request.Query["db"], DataSourceType.MSSQL), "Products join Categories on Products.CategoryID = Categories.CategoryID") { Search = true };
    productSelect.Columns = new List<SelectColumn>()
    {
        new SelectColumn("ProductID"),
        new SelectColumn("ProductName"),
        new SelectColumn("CategoryName") {OptionGroup = true}
    };
    @(await DbNetSuiteCore.Control.Create(HttpContext).Render(productSelect))
}