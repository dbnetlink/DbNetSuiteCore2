@page
@using DbNetSuiteCore.Enums
@using DbNetSuiteCore.Models
@using DbNetSuiteCore.Web.Helpers
@{
    var productSelect = new SelectModel(DataSourceType.MongoDB, "MongoDb(local)", "Products") { DatabaseName = ConnectionStringHelper.TestConnectionString(Request.Query["db"], DataSourceType.MongoDB), Searchable = true };

    productSelect.Columns = new List<SelectColumn>() {
        new SelectColumn("ProductID"),
        new SelectColumn("ProductName"),
        new SelectColumn("CategoryID") {OptionGroup = true, Lookup = new Lookup("Categories", "CategoryID", "CategoryName")}
    };

    @(await new DbNetSuiteCore.SelectControl(HttpContext).Render(productSelect))
}